    <put-attribute name="head" value="resources/jsp/layouts/tiles/header.jsp" />
    <put-attribute name="body" value="resources/jsp/layouts/tiles/body.jsp" />
</definition>

<!-- 위의 레이아웃을 상속 받은 액션 호출됐을 때 -->
