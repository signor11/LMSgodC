<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yedam.lms.smp.impl.MajorDAO">

<!-- 단건 조회 -->
	<select id="getMajor" resultType="majorVO">
		SELECT *
		FROM MAJOR
		WHERE MAJORNUM = #{majornum}
	</select>
	
<!-- 다건 조회 -->
	<select id="getMajorList" resultType="map">
		SELECT *
		FROM MAJOR
		ORDER BY MAJORNUM
	</select>
	
<!-- 수정 -->
	<update id="updateMajor" parameterType="majorVO">
		UPDATE MAJOR SET 
						 MAJORNAME = #{majorname}
					WHERE MAJORNUM = #{majornum}	 
	</update>
	
<!-- 삭제 -->
	<delete id="deleteMajor" parameterType="majorVO">
		DELETE FROM MAJOR
		WHERE MAJORNUM = #{majornum}	 
	</delete>

<!-- 등록 -->
	<insert id="insertMajor" parameterType="majorVO">
		INSERT INTO MAJOR(
							MAJORNUM,
							MAJORNAME
		)
		VALUES				(
							 #{majornum},
							 #{majorname}
		
		)
		
	</insert>

</mapper>